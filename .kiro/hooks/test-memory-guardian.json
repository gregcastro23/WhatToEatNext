{
  "name": "Test Memory Guardian",
  "description": "Monitors test memory usage and prevents memory leaks during test execution",
  "trigger": {
    "type": "onCommand",
    "command": "test"
  },
  "condition": {
    "script": "return process.env.NODE_ENV !== 'production';"
  },
  "actions": [
    {
      "type": "runScript",
      "script": "src/services/campaign/testMemoryGuardian.js",
      "parameters": {
        "memoryLimit": "1GB",
        "autoCleanup": true,
        "monitorInterval": 5000
      }
    }
  ],
  "settings": {
    "autoExecute": true,
    "runInBackground": true,
    "priority": "high"
  }
}