import { Icon } from 'astro-icon/components';

interface Props {
  name: string;
  size?: number;
  color?: string;
  class?: string;
}

const { 
  name,
  size = 24,
  color = 'currentColor',
  class: className = ''
} = Astro.props;

// Map our internal icon names to SVG paths
const iconMappings: Record<string, string> = {
  // Moon phases
  'moon-new': '/icons/moon/new-moon.svg',
  'moon-waxing-crescent': '/icons/moon/waxing-crescent.svg',
  'moon-first-quarter': '/icons/moon/first-quarter.svg',
  'moon-waxing-gibbous': '/icons/moon/waxing-gibbous.svg',
  'moon-full': '/icons/moon/full-moon.svg',
  'moon-waning-gibbous': '/icons/moon/waning-gibbous.svg',
  'moon-last-quarter': '/icons/moon/last-quarter.svg',
  'moon-waning-crescent': '/icons/moon/waning-crescent.svg',
};

const iconPath = iconMappings[name] || '';

{
  iconPath ? (
    <img 
      src={iconPath} 
      width={size} 
      height={size} 
      alt="" 
      style={`color: ${color};`} 
      class={className} 
    />
  ) : (
    <div 
      style={`width: ${size}px; height: ${size}px; background-color: #ccc; border-radius: 50%;`} 
      class={className}
    ></div>
  )
} 