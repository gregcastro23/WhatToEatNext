{
  "compilerOptions": {
    // Performance optimizations for faster compilation
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "bundler",

    // Compilation speed optimizations
    "incremental": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,

    // Type checking optimizations (balanced for development speed)
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "useDefineForClassFields": true,
    "exactOptionalPropertyTypes": false,
    "noUncheckedIndexedAccess": false,

    // Enhanced path mapping for better imports and IntelliSense
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["./src/components/*"],
      "@utils/*": ["./src/utils/*"],
      "@types/*": ["./src/types/*"],
      "@data/*": ["./src/data/*"],
      "@calculations/*": ["./src/calculations/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@contexts/*": ["./src/contexts/*"],
      "@services/*": ["./src/services/*"],
      "@constants/*": ["./src/constants/*"]
    },

    // Enhanced type definitions and libraries
    "lib": ["dom", "dom.iterable", "es6", "es2018", "es2020"],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "noEmit": true,
    "resolveJsonModule": true,

    // Enhanced IntelliSense and development experience
    "declaration": false,
    "declarationMap": false,
    "sourceMap": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    // Additional optimizations for astrological calculations
    "downlevelIteration": true,
    "importHelpers": true,
    "noEmitHelpers": false,

    // Error reporting optimizations
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true
  },

  // Optimized include patterns for faster compilation
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/types/enhanced-astrology.d.ts"
  ],

  // Optimized exclude patterns to reduce compilation time
  "exclude": [
    "node_modules",
    ".next",
    "out",
    "build",
    "dist",
    "coverage",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/__tests__/**",
    "**/test/**",
    "scripts/**/*.js",
    "patches/**",
    "backups/**",
    "logs/**",
    "metrics/**",
    ".transformation-backups/**"
  ],

  // TypeScript project references for faster incremental builds
  "references": [],

  // Compiler diagnostics for development experience
  "compileOnSave": false,

  // Watch options for better development experience
  "watchOptions": {
    "watchFile": "useFsEvents",
    "watchDirectory": "useFsEvents",
    "fallbackPolling": "dynamicPriority",
    "synchronousWatchDirectory": true,
    "excludeDirectories": [
      "**/node_modules",
      "**/.git",
      "**/.next",
      "**/dist",
      "**/build",
      "**/coverage"
    ]
  },

  // Type acquisition for enhanced IntelliSense
  "typeAcquisition": {
    "enable": true,
    "include": ["node", "react", "react-dom", "next"],
    "exclude": []
  }
}
