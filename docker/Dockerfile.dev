# WhatToEatNext - Development Dockerfile
# Optimized for development with hot reload and debugging

FROM node:20-alpine

# Install system dependencies
RUN apk add --no-cache \
    libc6-compat \
    curl \
    git \
    && rm -rf /var/cache/apk/*

# Enable Yarn
RUN corepack enable

# Set working directory
WORKDIR /app

# Set platform-specific environment variables for Linux container
ENV npm_config_platform=linux
ENV npm_config_arch=x64
ENV npm_config_target_platform=linux
ENV npm_config_target_arch=x64
ENV NEXT_TELEMETRY_DISABLED=1

# Copy package files first for better caching
COPY package.json yarn.lock .yarnrc ./

# Install dependencies with force flag to handle platform-specific packages
RUN yarn install --frozen-lockfile --production=false --force

# Copy source code
COPY . .

# Expose port
EXPOSE 3000

# Start development server with hot reload
CMD ["yarn", "dev"] 